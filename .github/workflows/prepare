#!/usr/bin/env bash

# Root Directories
ROOT_DIRECTORIES=(
    "./**"
    "packages/**"
)

echo "Checking you haven't broken anything. Hold tight ðŸŽ…"

has_pubspec_file() {
  if [ -f "$1/pubspec.yaml" ]; then
    return 0
  else
    return 1 
  fi
}

check_types() {
  local dir="$1"
  (cd "$dir" && dart pub get && dart analyze && dart test)
  if [ $? -ne 0 ]; then
    echo "Your change broke something in $dir ðŸ‘€"
    exit 1
  else  
    echo "$dir âœ…"
  fi
}

for root_dir in "${ROOT_DIRECTORIES[@]}"; do
  for dir in $root_dir; do
    if has_pubspec_file "$dir"; then
      echo "$dir has a pubspec file"
      check_types "$dir"
    fi
  done
done